{% extends 'base.html.twig' %}

{% block title %} Type d'aide à la personne {% endblock %}

{% block body %}
    <h1>Type d'aide à la personne</h1>

    <table class="table">
        <thead>
            <tr>
              
               <th scope="col">Type</th>
                <th scope="col">action</th>
            </tr>
        </thead>
        <tbody>
        {% for personal_assistance in personal_assistances %}
            <tr>
                
                <td>{{ personal_assistance.type }}</td>
                <td class="edition">
                   
                    <a class="btn"  href="{{ path('app_personal_assistance_edit', {'id': personal_assistance.id}) }}">Modifier</a>
                    {{ include('personal_assistance/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_personal_assistance_new') }}">Ajouter</a>
{% endblock %}
