{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Liste des Contacts</h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Maiden_name</th>
               
                <th>City</th>
            

               
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
             
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.maidenName }}</td>
               
                <td>{{ contact.city }}</td>

              
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d') : '' }}</td>
                
                   
                 <td class="edition">
                <a type="button" href="{{ path('app_contact_show', {'id': contact.id}) }}"><span class="btn"> Voir </span></a>
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('contact/_delete_form.html.twig') }}
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
