{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Maiden_name</th>
                <th>Mail</th>
                <th>Adress</th>
                <th>Zip_code</th>
                <th>City</th>
                <th>Phone_number</th>
                <th>Content</th>
                <th>Preferency</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.maidenName }}</td>
                <td>{{ contact.mail }}</td>
                <td>{{ contact.adress }}</td>
                <td>{{ contact.zipCode }}</td>
                <td>{{ contact.city }}</td>
                <td>{{ contact.phoneNumber }}</td>
                <td>{{ contact.content }}</td>
                <td>{{ contact.preferency ? 'Yes' : 'No' }}</td>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
