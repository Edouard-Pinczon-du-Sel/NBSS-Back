{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
<div class="container-xl bg-secondary bg-gradient p-5 border-top text-white">
    <h1>Picture index</h1>
    <a href="{{ path('app_picture_new') }}">Create new</a>
    <table class="table text-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>PlaceOrder</th>
                <th>Name</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>{{ picture.placeOrder }}</td>
                <td>{{ picture.image.originalName}}</td>
                <td><img class="border img-thumbnail img-fluid imgage" src="/images/carrousel/{{ asset(picture.image.name) }}" /></td>

                <td>
                {{ include('picture/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
