{% extends 'base.html.twig' %}

{% block title %} Moment d'intervention{% endblock %}

{% block body %}
    <h1>Moment d'intervention</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th scope="col">Type</th>
                <th scope="col">action</th>
            </tr>
        </thead>
        <tbody>
        {% for intervention in interventions %}
            <tr>
                
                <td>{{ intervention.moment }}</td>
                <td class="edition">
                    
                    <a class="btn" href="{{ path('app_intervention_edit', {'id': intervention.id}) }}">Modifier</a>
                      {{ include('intervention/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_intervention_new') }}">Ajouter</a>
{% endblock %}
