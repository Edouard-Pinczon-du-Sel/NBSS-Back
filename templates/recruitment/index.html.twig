{% extends 'base.html.twig' %}

{% block title %}Annonce d'offre d'emploi{% endblock %}

{% block body %}

<a class='btn btn-dark' href="{{ path('app_recruitment_new') }}">Ajouter</a>

    <h1 class="mt-2">Annonce d'offre d'emploi</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Publier le</th>
                <th>Visibilité</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for recruitment in recruitments %}
            <tr>
                <td>{{ recruitment.title }}</td>
                <td>{{ recruitment.publishedOn ? recruitment.publishedOn|date('Y-m-d') : '' }}</td>
                <td>{{ recruitment.visibility ? 'Oui' : 'Non' }}</td>
                <td>
                    <a type="button" class="btn btn-primary mb-1" href="{{ path('app_recruitment_show', {'id': recruitment.id}) }}">Voir</a>
                    <a type="button" class='btn btn-primary mb-1' href="{{ path('app_recruitment_edit', {'id': recruitment.id}) }}">Modifier</a>
                    {{ include('recruitment/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune annonce trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}